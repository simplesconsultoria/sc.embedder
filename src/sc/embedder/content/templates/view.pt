<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="sc.embedder">
    <body>

    <metal:main fill-slot="main">
        <tal:main-macro metal:define-macro="main">

            <div tal:replace="structure provider:plone.abovecontenttitle" />

            <h1 class="documentFirstHeading" tal:content="context/title" />

            <p class="documentDescription" tal:content="context/description" />

            <div tal:replace="structure provider:plone.belowcontenttitle" />

            <div tal:replace="structure provider:plone.abovecontentbody" />

            <div tal:condition='python:context.player_position != "Bottom"'
                 tal:attributes="class view/get_player_pos_class">
                 <span tal:replace="structure context/embed_html"/>
            </div>

            <div id="embed_body_text" class="field"
                tal:define="text context/text/output|nothing">
                <p class="discreet"
                    tal:define="is_editable context/@@plone_context_state/is_editable"
                    tal:condition="python:not text and is_editable"
                    i18n:domain="plone"
                    i18n:translate="no_body_text">
                  This item does not have any body text, click the edit tab to change it.
                </p>
                <div tal:condition="text" tal:content="structure text" />
            </div>

            <div tal:condition='python:context.player_position == "Bottom"'
                 class="bottom_embedded" >
                 <span tal:replace="structure context/embed_html" />
            </div>

            <div id="alt_cont" class="field"
                tal:define="text context/alternate_content/output|nothing">
                <p class="discreet"
                    tal:define="is_editable context/@@plone_context_state/is_editable"
                    tal:condition="python:not text and is_editable"
                    i18n:domain="plone"
                    i18n:translate="no_body_text">
                  This item does not have any alternate content, click the edit tab to change it.
                </p>
                <a i18n:translate="" tal:condition="text">Alternate content</a>
                <div class="alt_cont_text" tal:condition="text" tal:content="structure context/alternate_content" />
            </div>

            <div tal:replace="structure provider:plone.belowcontentbody" />
            <script type="application/javascript" tal:attributes="src string:$portal_url/embedder.js"></script>
        </tal:main-macro>
    </metal:main>

    </body>
</html>
